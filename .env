# React Video Editor Pro - Environment Configuration
# Copy this file to .env and update the values as needed

# Primary App Configuration
VITE_PRIMARY_APP_API_URL=http://localhost:8000
VITE_PRIMARY_APP_UI_URL=http://localhost:3003
VITE_RENDERS_PAGE_PATH=/renders

# API Endpoints Configuration
VITE_API_RENDER_ENDPOINT=/api/render

# Feature Flags
# Set to 'true' to enable API-based image loading instead of static data
VITE_IMAGES_API_ENABLED=true
# Set to 'true' to enable API-based video loading instead of static data
VITE_VIDEOS_API_ENABLED=true
# Set to 'true' to enable API-based audio loading instead of static data
VITE_AUDIOS_API_ENABLED=true
# Set to 'true' to proxy remote images through Vite dev server to avoid CORS in dev
VITE_PROXY_IMAGES_ENABLED=true
# Set to 'true' to proxy remote videos through Vite dev server to avoid CORS in dev
VITE_PROXY_VIDEOS_ENABLED=true
# Set to 'true' to proxy remote audios through Vite dev server to avoid CORS in dev
VITE_PROXY_AUDIOS_ENABLED=true

# Note: All VITE_ prefixed variables are exposed to the client-side code
# Make sure to restart the development server after changing these values
